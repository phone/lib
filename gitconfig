[github]
    user = phone
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = auto
[merge]
    tool = vimdiff
[core]
    editor = vi
    excludesfile = ~/.global_gitignore
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[help]
    autocorrect = 1
[interactive]
    singlekey = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    br = branch
    ci = commit
    co = checkout
    df = diff
    dfc = diff --cached
    lg = log -p
    lgs = log --stat
    lol = log --graph --pretty=format:'%C(red)%h %C(yellow)%ad %Cblue%an%Cgreen%d %Creset%s' --date=relative
    lol2 = log --graph --decorate --format='%h%Cred%d %Cgreen%ae %C(yellow)%ci %Creset%s' --date=relative
    lol3 = log --graph --pretty=format:'%h %ad %an%d %s' --date=relative
    lola = log --graph --decorate --all --format='%h%Cred%d %Cgreen%ae %C(yellow)%ci %Creset%s' --date=relative
    ls = ls-files
    st = status
